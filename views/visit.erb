<h2>Writing in barber shop</h2>

<form action="visit" method="post">
  <div class="form-group">
    <label>Your name</label>
    <input name="username" type="text" class="form-control" placeholder="Enter your name" value="<%=@name %>">
  </div>
  <div class="form-group">
    <label>Your phone</label>
    <input name="phone" type="text" class="form-control" placeholder="Enter your phone" value="<%=@phone %>">
  </div>
  <div class="form-group">
    <label>Enter time</label>
    <input id="datetimepicker" name="time" type="text" class="form-control" placeholder="Enter date and time" value="<%=@time %>">
  </div>
  <div class="form-group">
  <select name="variable" class="form-control">
    <option>Walter White</option>
    <option>Jessie Pinkman</option>
    <option>Gus Fring</option>
  </select>
  </div>
  <div>
    <label>Color hair:</label>
    <select id="color" class="form-group" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Writing</button>
</form>

<script type="text/javascript" charset="utf-8">
  jQuery.datetimepicker.setLocale('en');
  $('#color').simplecolorpicker();
  $('#datetimepicker').datetimepicker();
</script>